.defalt-container
  -if user_signed_in?
    = render 'users/indexheader'
  -else
    = render 'products/index-header-list'
  %nav.category-bar
    %ul
      %li
        メルカリ  ＞
        %span
          レディース
  %section.item-box-container
    .item-box-container__single-container
      %h1.item-name
        = @product.name
      .item-main-content
        .item-slider-content
          .item-slider-content__slider 
            - @images.each do |image|
              = image_tag image.image_url, class:"item-slider-content__slider--product-img"
          .item-slider-content__thumbnail 
            - @images.each do |image|
              = image_tag image.image_url, class:"item-slider-content__thumbnail--product-img"
        %table.item-detail-table
          %tbody
            %tr
              %th
                出品者
              %td
                = @user.name
                .evaluation
                  .item-user-ratings
                    %i.fas.fa-laugh
                    %span
                      500
                  .item-user-ratings
                    %i.fas.fa-meh
                    %span
                      100
                  .item-user-ratings
                    %i.fas.fa-frown
                    %span
                      3
            %tr
              %th
                カテゴリー
              %td
                %i.fas.fa-chevron-right
                = link_to"レディース",root_path
            %tr
              %th
                ブランド
              %td
                = link_to"ワンピース",root_path
            %tr
              %th
                商品のサイズ
              %td
                Free size
            %tr
              %th
                商品の状態
              %td
                = @product.condition.name
            %tr
              %th
                配送料の負担
              %td
                = @product.delivery.payment.name
            %tr
              %th
                配送の方法
              %td
                普通郵便(定形、定形外)
            %tr
              %th
                配送元地域
              %td
                = @product.delivery.prefecture.name
            %tr
              %th
                発送日の目安
              %td
                ２〜３日で発送
      .item-price-box
        %span.item-price__bold
          ¥
          = @product.price
        %span.item-tax
          （税込）
        %span.item-shipping-fee
          送料込み
      = link_to buy_products_path(@product), class:"item-buy-btn" do
        購入を確定する
      .item-description
        %p.item-description__inner
          = @product.description
      .item-button-container
        .item-button-container__left
          = render partial: 'likes/like', locals: { product: @product, products: @products, likes: @likes, like: @like}
        .item-button-container__center
          .item-button-container__center--report  
            = link_to root_path do
              %i.far.fa-flag
              %span
                不適切な商品の報告
        .item-button-container__right
          = link_to root_path do
            %i.fas.fa-unlock-alt
            %span
            あんしん・あんぜんへの取り組み
  .item-detail-message
  %ul.nav-item-link-prev-next
    %li.nav-item-link-prev
      = link_to root_path do
        %i.fas.fa-chevron-left
        保護フィルム
    %li.nav-item-link-next
      = link_to root_path do
        パジャマ
        %i.fas.fa-chevron-right
  .item-social-media-box
    %ul.social-media-box
      %li.facebook-btn
        = link_to root_path do
          %i.fab.fa-facebook-square
      %li.twitter-btn
        = link_to root_path do
          %i.fab.fa-twitter-square
      %li.pinterest-btn
        = link_to root_path do
          %i.fab.fa-pinterest-square
  .items-in-user-profile
    %section.items-box-container.items-in-user-profile 
    
      %h2.items-box-head
        = @user.name
        さんのその他の出品
      .items-box-content__clearfix
        %section.items-box
          = link_to root_path do
            %figure.items-box-photo
              = image_tag "http://c.imgz.jp/760/30368760/30368760_16_D_500.jpg", class:"other_img"
            .items-box-body
              %h3.items-box-name
                大人気 liflattie ships:リネンタックパンツ
              .items-box-num
                .items-box-price
                  ¥3000
                .like
                  %i.far.fa-heart
                  5

      %h2.items-box-head
        = link_to root_path do
          レディースカジュアルパンツ その他の商品
      .items-box-content__clearfix
        %section.items-box
          = link_to root_path do
            %figure.items-box-photo
              = image_tag "http://c.imgz.jp/760/30368760/30368760_16_D_500.jpg", class:"other_img"
            .items-box-body
              %h3.items-box-name
                大人気 liflattie ships:リネンタックパンツ
              .items-box-num
                .items-box-price
                  ¥3000
                .like
                  %i.far.fa-heart
                  5
= render 'index-footer'